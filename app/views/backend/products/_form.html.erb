<div class="row">
  <div class="col-lg-6">
    <section class="panel">
      <div class="panel-body">
        <%= simple_form_for [:backend, product] do |f| %>
          <%= f.input :name %>
          <%= f.input :item_code %>
          <%= f.submit '送出',class: "btn btn-primary" %>
          <%= link_to '取消', backend_products_path, class: 'btn btn-default'%>
        <% end %>
      </div>
    </section>
  </div>
</div>
