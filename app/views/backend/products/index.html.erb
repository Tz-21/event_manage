<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <h1>產品列表</h1>
        <%= link_to '新增產品', new_backend_product_path, class: "btn btn-primary" %>
      </header>
      <table class="table table-striped table-advance table-hover">
        <thead>
          <tr>
            <th>產品名稱</th>
            <th>商品代碼</th>
            <th>開始租借時間</th>
            <th>功能</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
            	<td><%= product.name %></td>
            	<td><%= product.item_code %></td>
              <% if product.rent? %>
            	  <td><%= product.start_rent %></td>
              <% else %>
                <td>閒置中</td>
              <% end %>
              <td>
                <%#= link_to '租借', 租借路徑, class: "btn-info" %>
                <%#= link_to '歸還', 歸還路徑, class: "btn-info" %>
                <%= link_to '編輯', edit_backend_product_path(product), class: "btn btn-primary" %>
                <%= link_to '刪除', backend_product_path(product), method: :DELETE, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </section>
  </div>
</div>
