<%= link_to '新增產品', new_backend_product_path, class: "btn btn-primary" %>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <h1>產品列表</h1>
      </header>
      <table class="table table-striped table-advance table-hover">
        <thead>
          <tr>
            <th>產品名稱</th>
            <th>商品代碼</th>
            <th>開始租借時間</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
            	<td><%= product.name %></td>
            	<td><%= product.item_code %></td>
              <% if product.rent? %>
            	  <td><%= product.start_rent %></td>
              <% else %>
                <td>閒置中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </section>
  </div>
</div>
