<div class="row">
  <div class="col-lg-6">
    <section class="panel">
      <div class="panel-body">
        <%= simple_form_for [:admin, client] do |f| %>
          <%= f.input :name,label: '名字'%>
          <%= f.input :id_number,label: '身分證字號' %>
          <%= f.input :mail,label: 'E-mail' %>
          <%= f.input :mobile_phone,label: '手機號碼' %>
          <%= f.input :company,label: '公司' %>
          <%= f.input :ring_id,label: '手環ID'%>
          <%= f.input :id_photo,label: '大頭照'%>
          <%= f.submit "送出", class: "btn btn-primary" %>
          <%= link_to '取消', admin_clients_path(client), class: 'btn btn-default'%>
        <% end %>
      </div>
    </section>
  </div>
</div>
