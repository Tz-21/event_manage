<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <h1>客戶列表</h1>
        <%= link_to '新增客戶', new_admin_client_path, class: "btn btn-primary" %>
      </header>
      <table class="table table-striped table-advance table-hover">
        <thead>
          <tr>
            <th>姓名</th>
            <th>身份證字號</th>
            <th>E-mail</th>
            <th>手機號碼</th>
            <th>公司</th>
            <th>手環id</th>
            <th>大頭照</th>
            <th>租借狀態</th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
            	<td><%= client.name %></td>
            	<td><%= client.id_number %></td>
              <td><%= client.mail %></td>
              <td><%= client.mobile_phone %></td>
              <td><%= client.company %></td>
              <td><%= client.ring_id %></td>
              <td><%= image_tag("#{client.id_photo.url(:thumb)}") %></td>
              <% if client.product_full? %>
                <td>
                  <%= client.product.user.name %>
                  <%= client.product.name %>
                  <%= client.product.start_rent%>
                </td>
              <% else %>
                <td><%= '尚未租借' %></td>
              <% end %>
              <td>
                <%= link_to '編輯', edit_admin_client_path(client), class: "btn btn-primary" %>
                <%= link_to '刪除', admin_client_path(client), method: :DELETE, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @clients %>
    </section>
  </div>
</div>
