<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <div class="panel-body">
        <header>
          <h1>廠商列表</h1>
          <%= link_to '新增廠商', new_admin_firm_path, class: "btn btn-primary" %>
        </header>
        <%= form_tag admin_firms_path, method: :get do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "搜尋", name: nil %>
        <% end %>
      </div>
      <table class="table table-striped table-advance table-hover">
        <thead>
          <tr>
            <th>名稱</th>
            <th>統一編號</th>
            <th>電話號碼</th>
            <th>E-mail</th>
          </tr>
        </thead>
        <tbody>
          <% @firms.each do |firm| %>
            <tr>
            	<td><%= firm.name %></td>
            	<td><%= firm.tax_id %></td>
              <td><%= firm.phone %></td>
              <td><%= firm.email %></td>
              <td>
                <%= link_to '商品列表', admin_firm_firm_products_path(firm), class: "btn btn-info" %>
                <%= link_to '編輯', edit_admin_firm_path(firm), class: "btn btn-primary" %>
                <%= link_to '刪除', admin_firm_path(firm), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @firms %>
    </section>
  </div>
</div>